<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/grid_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_grid_item_icon"
                tools:src="@drawable/ic_launcher_background"
                android:layout_width="@dimen/grid_view_item_icon_size"
                android:layout_height="@dimen/grid_view_item_icon_size"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/main_grid_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sample"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>